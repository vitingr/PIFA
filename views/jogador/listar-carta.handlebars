<div class="container-listar-carta">
    <div class="carta-listar">
        <div class="foto-carta-listar">
            <img src="{{carta.fotoCarta}}" class="foto-carta">
            <h2 class="nome-jogador-listar">{{carta.nome}}</h2>
            <div class="info-listar">
                <p class="preco-minimo-listar">
                    Preço Mínimo: <mark class="value-listar">P${{carta.precoMin}}</mark>
                </p>
                <p class="preco-maximo-listar">
                    Preço Máximo: <mark class="value-listar">P${{carta.precoMax}}</mark>
                </p>
                <p class="raridade">
                    Clube: <mark class="value-listar">{{carta.clube}}</mark>
                </p>
            </div>
        </div>
        <div class="form-listar">
            <form action="/jogador/listarCarta/listar" method="POST">
                <label for="valorVenda">
                    Valor de Venda
                </label>
                <br>
                <input type="number" name="valorVenda" id="valorVenda" class="input-listar" placeholder="Seu Valor" min="{{carta.precoMin}}" max="{{carta.precoMax}}" required>

                <br>

                <input type="hidden" name="id" id="id" value="{{carta._id}}">

                <button type="submit" class="botao-listar">
                    <div class="svg-wrapper-1">
                        <div class="svg-wrapper">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                <path fill="none" d="M0 0h24v24H0z"></path>
                                <path fill="currentColor"
                                    d="M1.946 9.315c-.522-.174-.527-.455.01-.634l19.087-6.362c.529-.176.832.12.684.638l-5.454 19.086c-.15.529-.455.547-.679.045L12 14l6-8-8 6-8.054-2.685z">
                                </path>
                            </svg>
                        </div>
                    </div>
                    <span>Listar</span>
                </button>

            </form>
        </div>
    </div>
</div>